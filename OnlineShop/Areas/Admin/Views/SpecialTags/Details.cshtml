@model OnlineShop.Models.SpecialTags;
@{
    ViewData["Title"] = "Special Tag Details";
}

<br />
<h2 class="text-info ">Special Tag Details</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary=ModelOnly class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="SpecialTag" class="form-control" />
            </div>
            <span asp-validation-for="SpecialTag" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
           @* <input type="submit" class="btn btn-success" value="Back to List" />*@
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    }

